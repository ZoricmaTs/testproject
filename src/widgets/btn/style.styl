@import '../../fonts/style.styl';
@import '../../scenes/style.styl';

.button
  display flex
  align-items center
  position relative
  cursor pointer

  &:focus
  &:focus-visible
    outline 0
    box-shadow 0 0 0 0.1rem $color-purple, 0 0 0 0.2rem $color-purple

  &__stroke
    position relative
    {text-h3}
    padding 2px
    border-radius 22px
    background: $gradient
    &:hover
    &:focus
      opacity 0.5

  &__stroke > .title
    display flex
    justify-content center
    align-items center
    width 100%
    height 100%
    padding 12px 17px 13px 19px
    background-color white
    border-radius: 20px
    color: $color-purple

  &__fill
    position relative
    {text-h3}
    padding 14px 19px 15px 21px
    color $color-white
    background $gradient
    border-radius 22px
    &:hover
    &:focus
      opacity 0.5
    &-icon
      position absolute
      right 0
      width 44px

  &__with-icon
    justify-content center
    width 100%

.material-icons
  font-family 'Material Icons'
  font-weight normal
  font-style normal
  display inline-block
  font-size 24px  /* Preferred icon size */
  line-height 1
  text-transform none
  letter-spacing normal
  word-wrap normal
  white-space nowrap
  direction ltr
  /* Support for all WebKit browsers. */
  -webkit-font-smoothing antialiased
  /* Support for Safari and Chrome. */
  text-rendering optimizeLegibility
  /* Support for Firefox. */
  -moz-osx-font-smoothing grayscale
  /* Support for IE. */
  font-feature-settings 'liga'
