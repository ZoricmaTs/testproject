.list
  display flex
  flex-wrap wrap
  width 100%

.list-wrapper
  display flex
  flex-direction column


.pagination
  display flex
  flex-direction column
  width 100%
  &__buttons-wrapper
    display flex
    flex-direction row
  &__button
    display flex
    justify-content center
    width 40px
    height 40px
    border-radius 22px
    text-align center
    line-height 15px
    {montserrat-regular}
    color $color-dark-shade-50
    background transparent

    &:hover
      {montserrat-bold}
      background $gradient
      color $color-white

    &-icon
      width 100%
      height 40px
      text-align center
      line-height 40px
      color $color-white
      background $gradient-green
      border-radius 22px
  &__ellipsis
    display flex
    justify-content center
    width 40px
    height 40px
    border-radius 22px
    text-align center
    line-height 40px
    {montserrat-regular}
    color $color-dark-shade-50

.pagination__button.active
  background $gradient
  color $color-white
  {montserrat-bold}