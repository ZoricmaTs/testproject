@import '../../fonts/style.styl';
@import '../../scenes/style.styl';

.header
  display flex
  align-items center
  position fixed
  width 100%
  padding-top  15px
  padding-bottom 15px
  padding-left 16px
  padding-right 16px

  &_menu-button
    position relative
    z-index 30
    width 34px
    height 34px
    {gradient-text}
    &.hide
      display none
    &.show
      display flex

  &_wrapper
    display flex
    align-items center
    justify-content space-between
    width 100%

  &_button
    {text-link}
    color: $color-dark-shade-50
    background-color transparent

    &:hover
    &:focus
      color: $color-dark-shade-75

  &_items
    display flex
    flex-direction row
    &.hide
      display none
    &.show
      display flex

  &_item
    margin-left 10px
    margin-right 10px

    &:last-child
      margin-right 0

  &_items-mobile
    position absolute
    left 0
    right 0
    display flex
    flex-direction column
    width 100%
    &.hide
      display none
    &.show
      display flex

  &_items-mobile .header_item
    margin-left 0
    margin-right 0
    padding-left 16px
    padding-right 16px
    padding-top 8px
    padding-bottom 8px
  &_items-mobile .dropdown
    width 100%
  &_items-mobile .dropdown .dropdown_list
    left 0
    top 32px
  &_items-mobile .dropdown .dropdown_list__item
    padding-left 16px
    padding-right 16px

.active
  color: $color-dark-shade-75

@media screen and (min-width 736px)
  .header
    padding-right 100px
    padding-left 100px

@media screen and (min-width 1008px)
  .header
    padding-right 140px
    padding-left 140px
