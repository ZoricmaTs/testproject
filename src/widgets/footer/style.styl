.footer
  display flex
  flex-direction column

  &__columns-wrapper
    border-top 1px solid $color-dark-shade-25
    display flex
    flex-direction row
    justify-content space-between
    padding-left 16px
    padding-right 16px
    padding-top 50px
    padding-bottom 50px
    box-shadow 0px 1px 0px rgba(31, 32, 65, 0.1)

  &__column
    display flex
    flex-direction column
    align-items flex-start
  &__column_item
    align-self flex-start
    max-width 260px
    margin-bottom 20px

.footer__column_item.text
  {text-body}
  color $color-dark-shade-75

.footer__column_item.title
  {text-h3}
  color $color-dark-shade

.footer__column_item.link
  {text-link}
  color $color-dark-shade-50
  background-color transparent
  text-align start

.footer__column_item.button
  {text-link}
  color $color-dark-shade-50
  background-color transparent
  text-align start

.footer__column_item.icon
  font-size 24px
  width 24px
  height 24px
  {gradient-text}
  margin-left 10px
  margin-right 10px
  margin-bottom 0
.footer__columns-wrapper:last-child > .footer__column:first-child > .footer__column_item:first-child
  margin-bottom 0
  max-width 100%
.footer__columns-wrapper:last-child
  align-items center
  padding-top 23px
  padding-bottom 23px
  box-shadow 0px 10px 20px rgba(31, 32, 65, 0.05)
.footer__columns-wrapper:last-child > .footer__column:last-child
  display flex
  flex-direction row


@media screen and (min-width 736px)
  .footer__columns-wrapper
    padding-right 100px
    padding-left 100px
    padding-top 80px
    padding-bottom 80px
@media screen and (min-width 1008px)
  .footer__columns-wrapper
    padding-right 140px
    padding-left 140px
    padding-top 100px
    padding-bottom 100px