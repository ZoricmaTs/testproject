@import '../../fonts/style.styl';
@import '../../scenes/style.styl';

.dropdown
  display flex
  position relative
  width max-content

  &_toggle
    {text-link}
    width 100%
    color: $color-dark-shade-50
    background-color transparent
    &:hover
    &:focus
      color: $color-dark-shade-75

  &_list
    position absolute
    z-index 2
    top 24px
    width 100%
    background-color white

    &__item
      background-color transparent
      color: $color-dark-shade-50
      padding 5px

      &:hover
      &:focus
        color: $color-dark-shade-75

.active
  color: $color-dark-shade-75

