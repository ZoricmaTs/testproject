.scene
  &__authorization
    &_form
      width 380px
      padding 40px 30px 32px 30px
      background-color $color-white
      &_auth-button
        margin-top 10px
        margin-bottom 10px
      &_button-wrapper
        display flex
        flex-direction row
        justify-content space-between
        align-items center
        margin-top 20px
