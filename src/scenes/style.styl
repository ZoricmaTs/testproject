* {
  margin 0
  padding 0
  border-width 0
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  box-sizing border-box
}

html
  height: 100%
  overflow hidden

body
  width: 100%
  height: 100%

.scene
  position relative
  height: 100%

.show
  display: block

.hide
  display: none

$color-dark-shade = rgba(31, 32, 65, 1);
$color-dark-shade-75 = rgba(31, 32, 65, 0.75);
$color-dark-shade-50 = rgba(31, 32, 65, 0.5);
$color-dark-shade-25 = rgba(31, 32, 65, 0.25);
$color-dark-shade-10 = rgba(31, 32, 65, 0.1);
$color-dark-shade-05 = rgba(31, 32, 65, 0.05);
$color-error = tomato
$color-success = #60ee29;
$color-purple = #BC9CFF;
$color-green = #6FCF97;
$color-white = #FFFFFF;
$gradient = linear-gradient(180deg, #BC9CFF 0%, #8BA4F9 100%);
$gradient-green = linear-gradient(180deg, #6FCF97 0%, #66D2EA 100%);

quicksand-bold = @block {
  font-family: 'Quicksand'
  font-style: normal
  font-weight: 700
}

montserrat-regular = @block {
  font-family: 'Montserrat', Arial, Helvetica, sans-serif
  font-style: normal
  font-weight: 400
}

montserrat-bold = @block {
  font-family: 'Montserrat', Arial, Helvetica, sans-serif
  font-style: normal
  font-weight: 700
}

text-h1 = @block {
  {montserrat-bold}
  font-size: 24px
  line-height: 29px
}

text-h2 = @block {
  {montserrat-bold}
  font-size 19px
  line-height 23px
}

text-h3 = @block {
  {montserrat-bold}
  font-size 12px
  line-height 15px
  text-transform uppercase
}

text-link = @block {
  {montserrat-regular}
  font-size 14px
  line-height 17px
}

text-body = @block {
  {montserrat-regular}
  font-size 14px
  line-height 24px
}

text-quicksand-body = @block {
  {quicksand-bold}
  font-size 14px
  line-height 18px
}

gradient-text = @block {
  background $gradient
  -webkit-background-clip text
  background-clip text
  -webkit-text-fill-color: transparent
  color transparent
}

gradient-border = @block  {
  content ''
  position: absolute
  top -1px
  bottom -1px
  left -1px
  right -1px
  background: $gradient
  border-radius 20px
  z-index -1
}

$grid-gutter = 16px
$grid-color = rgba(255, 0, 0, 0.2)

text-ellipsis = @block {
  overflow hidden
  white-space nowrap
  text-overflow ellipsis
}

grid(sides, columns)
  column-width = "calc((100% - %s * %s) / %s)" % ($grid-gutter columns columns)
  border-width 0 (sides - $grid-gutter / 2)
  background-image repeating-linear-gradient(
          to right,
          transparent 0,
          transparent $grid-gutter / 2,
          $grid-color $grid-gutter / 2,
          $grid-color "calc(%s + %s / 2)" % (column-width $grid-gutter),
          transparent "calc(%s + %s / 2)" % (column-width $grid-gutter),
          transparent "calc(%s + %s)" % (column-width $grid-gutter)
  )

.grid
  &::before
    content ''
    position absolute
    top 0
    left 0
    bottom 0
    right 0
    pointer-events none
    border solid transparent

    grid(16px, 4)
    background-repeat no-repeat

@media screen and (min-width 736px)
  .grid
    &::before
      grid(100px, 8)

@media screen and (min-width 1008px)
  .grid
    &::before
      grid(140px, 12)

