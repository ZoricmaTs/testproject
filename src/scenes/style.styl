* {
  margin 0
  padding 0
  border 0
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  box-sizing border-box
}

html
  height: 100%

body
  width: 100%
  height: 100%

.show
  display: block

.hide
  display: none

$color-dark-shade = rgba(31, 32, 65, 1);
$color-dark-shade-75 = rgba(31, 32, 65, 0.75);
$color-dark-shade-50 = rgba(31, 32, 65, 0.5);
$color-dark-shade-25 = rgba(31, 32, 65, 0.25);
$color-dark-shade-05 = rgba(31, 32, 65, 0.05);
$color-purple = #BC9CFF;
$color-green = #6FCF97;
$color-white = #FFFFFF;
$gradient = linear-gradient(180deg, #BC9CFF 0%, #8BA4F9 100%);

montserrat-regular = @block {
  font-family: 'Montserrat', Arial, Helvetica, sans-serif
  font-style: normal
  font-weight: 400
}

montserrat-bold = @block {
  font-family: 'Montserrat', Arial, Helvetica, sans-serif
  font-style: normal
  font-weight: 700
}

text-h1 = @block {
  {montserrat-bold}
  font-size: 24px
  line-height: 29px
}

text-h2 = @block {
  {montserrat-bold}
  font-size 19px
  line-height 23px
}

text-h3 = @block {
  {montserrat-bold}
  font-size 12px
  line-height 15px
  text-transform uppercase
}

text-body= @block {
  {montserrat-regular}
  font-size 14px
  line-height 24px
}